		<section class='flex flex-col items-center gap-y-7'>
			<div class='card-wrapper h-[231px] w-[231px] rounded-full'>
				<div class='card-content flex items-center justify-center'>
					<Image src={profilePhoto} alt='profile photo' class='w-56 rounded-full' loading='eager' />
				</div>
			</div>

			<div class='flex flex-col items-center gap-y-4'>
